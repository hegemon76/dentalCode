{% block javascripts %}
<script>
    var hamburger = document.getElementsByClassName("hamburger");
    var menu = document.getElementsByClassName("hidden-menu");
    hamburger[0].onclick = function(){
        if(menu[0].style.display == "flex"){
        document.body.style.overflowY = "visible";
        menu[0].style.display = "none";
        }
        else{
        document.body.style.overflowY = "hidden";
        menu[0].style.display = "flex";   
        }
    }
</script>

<script>
var img = document.getElementsByClassName("sliderimg");

img[0].src = "assets/home/banner1.svg";
img[1].src = "assets/home/banner2.svg";
img[2].src = "assets/home/banner3.svg";
var i = 1;       
function myLoop () {           
   setTimeout(function () {
      if(i%3 == 1){
        gsap.to(img[2], {duration: 0, opacity:"0"}).delay(2);
        gsap.to(img[1], {duration: 0, opacity:"1"}).delay(2);
        gsap.to(img[0], {duration: 2, x:"-100%"});
        gsap.to(img[1], {duration: 2, x:"-100%"});
        gsap.to(img[2], {duration: 0, x:"-100%"}); 
      }
      else if(i%3 == 2){
        gsap.to(img[2], {duration: 0, opacity:"1"}).delay(2);
        gsap.to(img[0], {duration: 0, opacity:"0"}).delay(2);
        gsap.to(img[1], {duration: 2, x:"-200%"});
        gsap.to(img[2], {duration: 2, x:"-200%"});
        gsap.to(img[0], {duration: 2, x:"100%"});     
      }
      else if(i%3 == 0){
        gsap.to(img[1], {duration: 0, opacity:"0"}).delay(2);
        gsap.to(img[0], {duration: 0, opacity:"1"}).delay(2);
        gsap.to(img[2], {duration: 2, x:"-300%"});
        gsap.to(img[0], {duration: 2, x:"0%"});
        gsap.to(img[1], {duration: 2, x:"0%"});      
      }
      i++;                             
      if (i < 10) {            
         myLoop();             
      }                        
    },10000)
}
myLoop();

</script>

