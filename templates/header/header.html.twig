<html>
<head>

{% block stylesheets %}
    <link href="{{ asset('styles/main.css') }}" rel="stylesheet"/>
    <link href="{{ asset('styles/keyframes.css') }}" rel="stylesheet"/>
    <link href="{{ asset('styles/header/header.css') }}" rel="stylesheet"/>
    <link href="{{ asset('styles/footer/footer.css') }}" rel="stylesheet"/>
    <link href="{{ asset('styles/home/home.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.2.6/gsap.min.js"></script>
{% endblock %}

<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<header>

<div class="wrapper">

    <div class="logo-container">
        <img src="assets/header/logo2.svg" alt="dentalcode-logo">
    </div>

    <div class="menu">
        <ul>
            <li class="active" id="loginbtn">Zaloguj się</li>
            <li>Umów wizytę</li>
            <li>Kontakt</li>
        </ul>
        <input class="hamburger" type="image" src="assets/header/hamburger.png">
    </div>

</div>

    <div class="hidden-menu">
        <ul>
            <li class="active" id="loginbtn2">Zaloguj się</li>
            <li>Umów wizytę</li>
            <li>Kontakt</li>
        </ul>
    </div>

    <div class="login-container">

        <div class="login-box">
            <div class="close-row">
                <input class="close" type="image" src="assets/home/close.png">
            </div>

            <form action="#">
                <h4>Zaloguj się</h4>
                <input type="text" name="login" placeholder="Login">
                <input type="text" name="password" placeholder="Hasło">
                <div class="submit-row">
                    <input type="submit" value="Zaloguj się"></input>
                </div>
                <a href="#">Zarejestruj się</a>
            </form>
        </div>
    
    </div>

</header>
